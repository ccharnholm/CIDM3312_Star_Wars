@page
@model CIDM3312_Star_Wars.Pages.Characters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Character</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Health)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Health)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.BattlePoints)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.BattlePoints)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Class)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Subclass)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Subclass)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Allegiance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Allegiance)
        </dd>
        @foreach(var weapon in Model.Character.CharacterWeapons!)
        {
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => weapon.Weapon.WeaponName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => weapon.Weapon.WeaponName)
            </dd>
            <dt class="col-sm-2">
            @Html.DisplayNameFor(model => weapon.Weapon.WeaponDamage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => weapon.Weapon.WeaponDamage)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Character?.CharacterID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
